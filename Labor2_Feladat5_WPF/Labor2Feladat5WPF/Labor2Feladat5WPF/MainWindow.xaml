<Window x:Class="Labor2Feladat5WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labor2Feladat5WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Label  Content="ROTATION"
                FontWeight="Bold"
                FontSize="20"
                RenderTransformOrigin="0.5 0.5"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <Label.RenderTransform>
                <RotateTransform Angle="{Binding Value, ElementName=slider}" />
            </Label.RenderTransform>
        </Label>
        <Slider x:Name="slider"
                Maximum="360"
                VerticalAlignment="Center" />
        <Label  Content="{Binding Value, StringFormat='The angle is {0:F0} degrees', ElementName=slider}"
                VerticalAlignment="Center"
                HorizontalAlignment="Center" />
    </StackPanel>
</Window>
